<configuration debug="true" scan="true" scanPeriod="30 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] %message%n</pattern>
        </encoder>
    </appender>>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="ch.qos.logback">
        <level value="warn"/>
    </logger>
</configuration>